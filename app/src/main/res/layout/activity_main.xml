<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/te_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="225dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="enter name"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_main"
        android:layout_width="192dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="64dp"
        android:onClick="naarAndereDing"
        android:text="Don't press me"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/te_main" />

    <Button
        android:id="@+id/btn_main2"
        android:layout_width="192dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="68dp"
        android:onClick="naarEenNogAnderDing"
        android:text="maybe press me"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main" />

    <TextView
        android:id="@+id/tv_main1"
        android:layout_width="192dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="68dp"
        android:text="temp"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main2" />

</androidx.constraintlayout.widget.ConstraintLayout>